program FindVector:

var
int V[8]


func void Find(int x, int size){
    var int i
    i = 0

    while ( i < size){
        if (V[i] == x)
        {
            print("Numero ", x, " encontrado en i:", i)  
        }
    }
}

main()
{
    var
    int x
    V[0] = 3
    V[1] = 6
    V[2] = 13
    V[3] = 23
    V[4] = 9
    V[5] = 8
    V[6] = 10
    V[7] = 0
    
    print("Ingresa el numero a buscar: ")
    read(x)
    Find(x, 8)

}